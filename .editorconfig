root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
indent_size = 2
max_line_length = off

[*.feature]
indent_size = 2

[*.py]
max_line_length = 88

[*.sh]
end_of_line = lf

[*.{yaml,yml}]
indent_size = 2
max_line_length = off
